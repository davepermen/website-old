@page
@model Fitness.Pages.User.LoginModel

<h1>Login</h1>

@if (User.Identity.IsAuthenticated == false)
{
    <form method="post">
        <input asp-for="Username" />
        <input asp-for="Password" />
        <button type="submit">login</button>
    </form>
}
else
{
    <meta http-equiv="refresh" content="0; url=/" />
}
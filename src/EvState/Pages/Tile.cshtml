@page
@model EvState.Pages.TileModel
@{
    Layout = null;
}
<style>
    * {
        margin: 0;
        padding: 0;
    }
    body {
        background-image: url('/icons/mstile-310x310.png');
        background-position: center center;
        background-size: cover;
        color: white;
        font-family: sans-serif;
        width: 100%;
        height: 100%;
    }
    a {
        color: inherit;
        text-decoration: inherit;
        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;
        flex-direction: column;
        justify-content: center;
    }
</style>
<body>
    <a href="/">
        <p id="1">@Model.StateOfCharge% 🚗🔋 current state</p>
        <p id="2">@Model.Charged kWh⚡ charged recently</p>
        <p id="3">@DateTime.Now.ToShortTimeString() o'clock</p>
    </a>
</body>